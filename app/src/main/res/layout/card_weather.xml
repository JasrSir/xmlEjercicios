<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardweather"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:id="@+id/iconoTiempo" />

        <TextView
            android:text="dia, Intervalo y  estadocielo"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iconoTiempo"
            android:id="@+id/txvIntervalo" />

        <TextView
            android:text="temperatura max y min"
            android:layout_below="@id/txvIntervalo"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/iconoTiempo"
            android:layout_height="wrap_content"
            android:id="@+id/txvTempyMaxMin" />

        <TextView
            android:text="precipitaciones"
            android:layout_toRightOf="@id/iconoTiempo"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_below="@id/txvTempyMaxMin"
            android:layout_height="wrap_content"
            android:id="@+id/txvPrecip" />

    </RelativeLayout>

</android.support.v7.widget.CardView>