<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_empleados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#dad8d8"
    tools:context="com.jasrsir.xmljasr.Empleados_Activity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Quiero mi lista de empleados ahora mismito"
        android:layout_width="match_parent"
        android:background="@color/cardview_light_background"
        android:layout_height="wrap_content"
        android:onClick="onClickEmpleado"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:id="@+id/btnEmpleados" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardEmpleados"
        android:layout_below="@id/btnEmpleados"
        android:layout_height="wrap_content" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Lista de empleados"
                android:layout_width="match_parent"
                android:layout_margin="8sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:id="@+id/txvTitleLista" />

            <TextView
                android:text=""
                android:layout_below="@id/txvTitleLista"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:padding="8sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txvListaEmpleados" />

            <TextView
                android:text="Edad media : "
                android:layout_below="@id/txvListaEmpleados"
                android:layout_margin="8sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txvEdadMedia" />

            <TextView
                android:text="Sueldo Medio : "
                android:layout_below="@id/txvEdadMedia"
                android:layout_margin="8sp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txvSalarioMedio" />

            <TextView
                android:text="Sueldo Mínimo : "
                android:layout_below="@id/txvSalarioMedio"
                android:layout_margin="8sp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txvSalarioMin" />
            <TextView
                android:text="Sueldo Máximo : "
                android:layout_below="@id/txvSalarioMin"
                android:layout_margin="8sp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txvSalarioMax" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>

</ScrollView>
