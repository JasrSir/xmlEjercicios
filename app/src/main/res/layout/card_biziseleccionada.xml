<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cardbiziSeleccion"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView
            android:text="Nombre Estacion"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/txvNombreEst" />

        <TextView
            android:text="Estado : "
            android:layout_below="@id/txvNombreEst"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/txvEstado" />

        <TextView
            android:text="Bicis Disponibles : "
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/txvEstado"
            android:layout_height="wrap_content"
            android:id="@+id/txvBicisDisp" />

        <TextView
            android:text="Anclajes Disponibles : "
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_below="@id/txvBicisDisp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/txvAnclaDisp" />
        <TextView
            android:text="Last Update : "
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_below="@id/txvAnclaDisp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/txvLastUpdate" />

        <Button
            android:text="LlÃ©vame al mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickLlevameMapa"
            android:layout_below="@id/txvLastUpdate"
android:layout_alignParentEnd="true"
            android:id="@+id/btnUri" />

    </RelativeLayout>

</android.support.v7.widget.CardView>